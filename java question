Question 1
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    int n = sc.nextInt();
	     if (n%2==0) {
		System.out.println("Even");
	}
	else {
	    System.out.println("odd");
	}
}
}

Question 2

import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc = new Scanner(System.in);
	    int n = sc.nextInt();
	     if (n>0) {
		System.out.println("positive");
	}
	else if (n<0) {
	    System.out.println("negative");
	  }  else {
	      System.out.println("Zero");
	  }
}
}

Question 3

public class Main
{
	public static void main(String[] args) {
	    int n=4;

	    for(int i=1; i<=n; i++) {
	    for(int j=i; j>=1; j--) {
	    	System.out.print("*");
	} 
	    System.out.println();
	}
	}
}

